<form method="POST" action="/songs/<%=@song.slug%>">
  
  <input type="hidden" name="_method" value="PATCH">
  
  <h2>Name: <input type="text" name="Name" id="song_name"></h2>
  <h3>Artist Name: <input type="text" name="Artist Name" id="artist_name"></h3>
  <h3>Genres:</h3>
  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name.titleize%></input>
  <% end %>
  
  <br></br>
  
  <input type="submit" value="Save" id="submit" name="submit">
</form>